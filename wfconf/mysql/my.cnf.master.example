[client]
port                    = 3306
socket                  = /var/lib/mysql/mysql.sock

[mysqld]
port                    = 3306
socket                  = /var/lib/mysql/mysql.sock
datadir                 = /var/lib/mysql
skip-locking
max_connections         = 300
table_cache             = 600
set-variable            = key_buffer=256M # we do have some MyISAM tables
set-variable            = max_allowed_packet=1M
set-variable            = table_cache=192
set-variable            = sort_buffer=4M
set-variable            = net_buffer_length=8K
set-variable            = myisam_sort_buffer_size=8M
log-slow-queries        = /var/lib/mysql/slow_query_log

### replication ###
server-id               = 240001

#master-host             = master
#master-port             = 3306
#master-user             = replication
#master-password         = secret

max_binlog_size         = 134217728
master-info-file        = master-master.info

#log                    = master.log
log-error               = master.err

log-bin                 = master-bin
log-bin-index           = master-bin.index

relay-log               = master-relay
relay-log-index         = master-relay.index
relay-log-info-file     = master-relay.info

skip-slave-start
log-slave-updates 

### innodb ###
innodb_data_file_path = ibdata1:10M:autoextend
innodb_file_per_table
innodb_data_home_dir = /var/lib/mysql/
innodb_log_group_home_dir = /var/lib/mysql/
innodb_log_arch_dir = /var/lib/mysql/
set-variable = innodb_mirrored_log_groups=1
set-variable = innodb_log_files_in_group=4
set-variable = innodb_log_file_size=5M
set-variable = innodb_log_buffer_size=16M
innodb_flush_log_at_trx_commit=1
innodb_flush_method=O_DIRECT
innodb_log_archive=0
set-variable = innodb_buffer_pool_size=24000M
set-variable = innodb_additional_mem_pool_size=6M
set-variable = innodb_file_io_threads=6
set-variable = innodb_lock_wait_timeout=50

[mysqldump]
quick
set-variable    = max_allowed_packet=16M

[isamchk]
set-variable    = key_buffer=20M
set-variable    = sort_buffer=20M
set-variable    = read_buffer=2M
set-variable    = write_buffer=2M

[myisamchk]
set-variable    = key_buffer=20M
set-variable    = sort_buffer=20M
set-variable    = read_buffer=2M
set-variable    = write_buffer=2M

[mysqlhotcopy]
interactive-timeout
